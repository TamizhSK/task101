{
  "framework": "sveltekit",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev -- --port $PORT",
  "installCommand": "npm install",
  "functions": {
    "src/routes/api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "env": {
    "DATABASE_URL": "@database_url",
    "PUBLIC_APP_URL": "@public_app_url",
    "SMTP_HOST": "@smtp_host",
    "SMTP_PORT": "@smtp_port", 
    "SMTP_USER": "@smtp_user",
    "SMTP_PASS": "@smtp_pass"
  }
}